sealed-secrets:
  fullnameOverride: sealed-secrets-controller
  
  # 중요: Private Key 백업 필요
  # 이 키를 잃어버리면 모든 SealedSecret 복호화 불가!
  
  # Controller 설정
  controller:
    # Namespace 제한 없음 (전체 클러스터)
    clusterRole: true
    
    # 리소스 제한
    resources:
      requests:
        cpu: 50m
        memory: 128Mi
      limits:
        cpu: 200m
        memory: 256Mi
  
  # Private Key 백업 활성화
  # Secret 이름: sealed-secrets-key
  secretName: sealed-secrets-key
